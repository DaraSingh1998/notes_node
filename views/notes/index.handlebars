{{#each notes}}
<div class="card card-body mb-2">
  <h4>{{title}}</h4>
  <p>{{details}}</p>
  <a class="btn btn-dark btn-block mb-2" href="/notes/edit/{{id}}">Edit</a>
  <form class="" action="/notes/{{id}}?_method=DELETE" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-danger btn-block" value="Delete">
  </form>
</div>
{{else}}
<p>No Notes Saved</p>
{{/each}}
